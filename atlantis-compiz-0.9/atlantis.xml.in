<?xml version="1.0"?>
<compiz>
	<plugin name="atlantis" useBcop="true">
		<_short>Cube Atlantis</_short>
		<_long>Render some sea animals inside of the transparent cube</_long>
		<category>Effects</category>
		<deps>
		<relation type="after">
			<plugin>composite</plugin>
			<plugin>opengl</plugin>
			<plugin>cube</plugin>
			<plugin>cubeaddon</plugin>
			<plugin>decor</plugin>
		</relation>
		<requirement>
			<plugin>opengl</plugin>
			<plugin>cube</plugin>
		</requirement>
		</deps>
		<options>
				<option name="speed_factor" type="float">
					<_short>Speed factor</_short>
					<_long>Multiply the speed of the fish by this factor.</_long>
					<default>1</default>
					<min>0.5</min>
					<max>3</max>
					<precision>0.01</precision>
				</option>
				<option name="start_crabs_bottom" type="bool">
					<_short>Start crabs on bottom</_short>
					<_long>Start crabs on the bottom of the cube.</_long>
					<default>false</default>
				</option>
				<option name="school_similar_groups" type="bool">
					<_short>School similar groups</_short>
					<_long>Fish in different groups, but of the same type, swim together.</_long>
					<default>true</default>
				</option>
				<option name="low_poly" type="bool">
					<_short>Low detail models</_short>
					<_long>Use less detailed models for increased performance.</_long>
					<default>false</default>
				</option>
				<subgroup>
					<_short>Creature Selection</_short>
					<option type="list" name="creature_type">
						<_short>Type</_short>
						<_long>Type of sea creature.</_long>
						<type>int</type>
						<min>0</min>
						<max>9</max>
						<default>
						<value>0</value>
						<value>1</value>
						<value>3</value>
						<value>4</value>
						<value>9</value>
						</default>
						<desc>
							<value>0</value>
							<name>Fish - Butterflyfish</name>
						</desc>
						<desc>
							<value>1</value>
							<name>Fish - Chromis 1</name>
						</desc>
						<desc>
							<value>2</value>
							<name>Fish - Chromis 2</name>
						</desc>
						<desc>
							<value>3</value>
							<name>Fish - Chromis 3</name>
						</desc>
						<desc>
							<value>4</value>
							<name>Fish - Type 1</name>
						</desc>
						<desc>
							<value>5</value>
							<name>Fish - Type 2</name>
						</desc>

						<desc>
							<value>6</value>
							<name>Dolphin</name>
						</desc>
						<desc>
							<value>7</value>
							<name>Shark</name>
						</desc>
						<desc>
							<value>8</value>
							<name>Whale</name>
						</desc>
						<desc>
							<value>9</value>
							<name>Crab</name>
						</desc>
					</option>
					<option type="list" name="creature_color">
						<_short>Color</_short>
						<_long>The color of the sea creature.</_long>
						<type>color</type>
						<default>
						<value>
							<red>0xFFFF</red>
							<green>0xFFFF</green>
							<blue>0xFFFF</blue>
							<alpha>0xFFFF</alpha>
						</value>
						<value>
							<red>0x6000</red>
							<green>0xA000</green>
							<blue>0xFFFF</blue>
							<alpha>0xFFFF</alpha>
						</value>
						<value>
							<red>0xFFFF</red>
							<green>0x7000</green>
							<blue>0x0000</blue>
							<alpha>0xFFFF</alpha>
						</value>
						<value>
							<red>0xFFFF</red>
							<green>0xFFFF</green>
							<blue>0x0000</blue>
							<alpha>0xFFFF</alpha>
						</value>
						<value>
							<red>0xFFFF</red>
							<green>0x0000</green>
							<blue>0x0000</blue>
							<alpha>0xFFFF</alpha>
						</value>
						</default>
					</option>
					<option type="list" name="creature_number">
						<_short>Number</_short>
						<_long>The number of the sea creature.</_long>
						<type>int</type>
						<min>1</min>
						<max>50</max>
						<default>
						<value>5</value>
						<value>5</value>
						<value>5</value>
						<value>5</value>
						<value>5</value>
						</default>
					</option>
					<option type="list" name="creature_size">
						<_short>Size</_short>
						<_long>The size of the sea creature.</_long>
						<type>int</type>
						<min>100</min>
						<max>20000</max>
						<default>
						<value>4000</value>
						<value>3500</value>
						<value>3500</value>
						<value>3500</value>
						<value>4000</value>
						</default>
					</option>
				</subgroup>
				<subgroup>
					<_short>Miscellaneous Selection</_short>
					<option type="list" name="plant_type">
						<_short>Type</_short>
						<_long>Type of sea plant.</_long>
						<type>int</type>
						<min>0</min>
						<max>2</max>
						<default>
						<value>0</value>
						<value>1</value>
						<value>2</value>
						</default>
						<desc>
							<value>0</value>
							<name>Coral - 1</name>
						</desc>
						<desc>
							<value>1</value>
							<name>Coral - 2</name>
						</desc>
						<desc>
							<value>2</value>
							<name>Aerator</name>
						</desc>
					</option>
					<option type="list" name="plant_color">
						<_short>Color</_short>
						<_long>The color of the sea plant.</_long>
						<type>color</type>
						<default>
						<value>
							<red>0x0000</red>
							<green>0xD000</green>
							<blue>0x1000</blue>
							<alpha>0xFFFF</alpha>
						</value>
						<value>
							<red>0x0000</red>
							<green>0xD000</green>
							<blue>0x1000</blue>
							<alpha>0xFFFF</alpha>
						</value>
						<value>
							<red>0x8000</red>
							<green>0x9000</green>
							<blue>0xFFFF</blue>
							<alpha>0x0C00</alpha>
						</value>
						</default>
					</option>
					<option type="list" name="plant_number">
						<_short>Number</_short>
						<_long>The number of the sea plants.</_long>
						<type>int</type>
						<min>1</min>
						<max>200</max>
						<default>
						<value>8</value>
						<value>8</value>
						<value>1</value>
						</default>
					</option>
					<option type="list" name="plant_size">
						<_short>Size</_short>
						<_long>The size of the sea plant.</_long>
						<type>int</type>
						<min>100</min>
						<max>20000</max>
						<default>
						<value>5000</value>
						<value>5000</value>
						<value>800</value>
						</default>
					</option>
				</subgroup>
			<group>
				<_short>Water / Ground</_short>
				<option name="show_water" type="bool">
					<_short>Render water</_short>
					<_long>Render water inside the cube.</_long>
					<default>true</default>
				</option>
				<option name="show_water_wire" type="bool">
					<_short>Render water wireframe</_short>
					<_long>Render water wireframe inside the cube.</_long>
					<default>false</default>
				</option>
				<option name="show_ground" type="bool">
					<_short>Render ground</_short>
					<_long>Render ground inside the cube.</_long>
					<default>true</default>
				</option>
				<option name="ground_color" type="color">
					<_short>Ground color</_short>
					<_long>Color of ground in the cube.</_long>
					<default>
						<red>0x8500</red>
						<green>0x5E00</green>
						<blue>0x0000</blue>
						<alpha>0xFFFF</alpha>
					</default>
				</option>
				<option name="water_height" type="float">
					<_short>Water surface height</_short>
					<_long>Height of water surface in the cube.</_long>
					<default>0.85</default>
					<min>0.2</min>
					<max>1</max>
					<precision>0.01</precision>
				</option>
				<option name="water_color" type="color">
					<_short>Water color</_short>
					<_long>Color of water in the cube.</_long>
					<default>
						<red>0x0800</red>
						<green>0x0900</green>
						<blue>0x3000</blue>
						<alpha>0x0800</alpha>
					</default>
				</option>
				<option name="grid_quality" type="int">
					<_short>Water/Ground grid smoothness</_short>
					<_long>Number of subdivisions that create a finer grid.</_long>
					<default>3</default>
					<min>1</min>
					<max>7</max>
				</option>
				<subgroup>
					<_short>Waves</_short>
					<option name="render_waves" type="bool">
						<_short>Render waves</_short>
						<_long>Render water waves inside the cube.</_long>
						<default>true</default>
					</option>
					<option name="wave_ripple" type="bool">
						<_short>Ripple effect</_short>
						<_long>Semi-randomize light scattering off water waves.</_long>
						<default>false</default>
					</option>
					<option name="wave_amplitude" type="float">
						<_short>Wave amplitude</_short>
						<_long>Amplitude of water waves.</_long>
						<default>0.02</default>
						<min>0</min>
						<max>0.5</max>
						<precision>0.01</precision>
					</option>
					<option name="wave_frequency" type="float">
						<_short>Wave frequency</_short>
						<_long>Frequency of water waves.</_long>
						<default>20</default>
						<min>0</min>
						<max>100</max>
						<precision>0.1</precision>
					</option>
					<option name="small_wave_amplitude" type="float">
						<_short>Small wave amplitude</_short>
						<_long>Amplitude of small water waves on the bigger ones.</_long>
						<default>0.01</default>
						<min>0</min>
						<max>0.5</max>
						<precision>0.01</precision>
					</option>
					<option name="small_wave_frequency" type="float">
						<_short>Small wave frequency</_short>
						<_long>Frequency of small water waves on the bigger ones.</_long>
						<default>40</default>
						<min>0</min>
						<max>100</max>
						<precision>0.1</precision>
					</option>
				</subgroup>
			</group>
			<group>
				<_short>Display</_short>
				<option name="rescale_width" type="bool">
					<_short>Rescale for screen ratio</_short>
					<_long>Rescale along the sides of the cube by the ratio of screen width to height.</_long>
					<default>true</default>
				</option>
				<subgroup>
					<_short>Lighting</_short>
				<option name="rotate_lighting" type="bool">
					<_short>Rotate lighting</_short>
					<_long>Preserve light direction when rotating the cube.</_long>
					<default>false</default>
				</option>
				<option name="light_inclination" type="float">
					<_short>Light inclination</_short>
					<_long>The angle of light rays from the horizon in degrees (0 is from the viewer's perspective, 90 is from on top).  Only has effect when Rotate Lighting is false.</_long>
					<default>90</default>
					<min>0</min>
					<max>180</max>
					<precision>0.1</precision>
				</option>
				<option name="light_ambient" type="float">
					<_short>Ambient light</_short>
					<_long>Component of light coming from all directions equally.</_long>
					<default>0.3</default>
					<min>0.0</min>
					<max>0.6</max>
					<precision>0.01</precision>
				</option>
				</subgroup>
			</group>
		</options>
	</plugin>
</compiz>
