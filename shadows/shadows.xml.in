<?xml version="1.0" encoding="UTF-8"?>
<compiz>
	<plugin name="shadows" useBcop="true">
		<_short>Shadows</_short>
		<_long>Make your windows cast true shadows.</_long>
		<category>Effects</category>
	<screen>
		<group>
		<_short>Shadows</_short>
	        <option type="int" name="fade_time">
	            <_short>Fade Time</_short>
	            <_long>Length of animation for shadows on windows changing focus.</_long>
	            <default>20</default>
                <min>1</min>
                <max>200</max>
	        </option>
	        <option type="color" name="shadow_color">
	            <_short>Color</_short>
                <_long>The color of the shadows.</_long>
                <default>
	                <red>0x0000</red>
	                <green>0x0000</green>
	                <blue>0x0000</blue>
	                <alpha>0x9999</alpha>
	            </default>
            </option>
            <option type="int" name="offset_x">
                <_short>Shadow X Offset</_short>
                <_long>How shifted the shadow should be per window depth unit, horizontally.</_long>
                <default>2</default>
                <min>-20</min>
                <max>20</max>
            </option>
            <option type="int" name="offset_y">
                <_short>Shadow X Offset</_short>
                <_long>How shifted the shadow should be per window depth unit, vertically.</_long>
                <default>2</default>
                <min>-20</min>
                <max>20</max>
            </option>
            <option type="int" name="blur">
                <_short>Blur Level</_short>
                <_long>How blurry the shadows should be.</_long>
                <default>5</default>
                <min>0</min>
                <max>20</max>
            </option>
		</group>
	</screen>
</plugin>
</compiz>
